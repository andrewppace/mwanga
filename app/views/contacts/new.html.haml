-@page_title = "Create a contact"
-@breadcrumbs.add "create", new_contact_path
%form{method: "post", action: contacts_path, class: "form-horizontal"}
  %fieldset
    %legend Create a contact
    =render partial: "forms/text", locals: {object: @contact, method: "first_name", label: "First Name"}
    =render partial: "forms/text", locals: {object: @contact, method: "last_name", label: "Last Name"}
    =render partial: "forms/submit", locals: {value: "Save"}
