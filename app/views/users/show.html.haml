-@breadcrumbs.add "my account", account_path
%form{method: "post", action: invitations_path, class: "form-horizontal"}
  %fieldset
    %legend Create a connection
    %div{class: "control-group #{@invitation.errors[:username].empty? ? "" : "error"}"}
      %label{for: "username", class: "control-label"}
        Username
      %div{class: "controls"}
        %input{type: "text", id: "username", name: "invitation[username]", class: "span4"}
        -unless @invitation.errors[:username].empty?
          %span{class: "help-inline"}
            =@invitation.errors[:username].to_sentence
    =render partial: "forms/submit", locals: {value: "Invite"}
