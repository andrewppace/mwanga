!!! 5
%html
  %head
    %title Mwanga - #{@page_title || "An Enlightened Addressbook"}
    =stylesheet_link_tag "application"
  %body
    -if flash[:notice]
      %section{id: "notices"}
        =flash[:notice]
    -if flash[:error]
      %section{id: "errors"}
        =flash[:error]
    %header
      -if @current_user
        =link_to "home", account_path
        \|
        =link_to "my info", myinfo_path
        \|
        =link_to "privacy", privacy_edit_path
        \|
        =link_to "logout", logout_path
    %section{id: "main"}
      =yield
    %footer
