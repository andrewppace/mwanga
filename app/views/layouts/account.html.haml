!!! 5
%html
  %head
    %title Mwanga - #{@page_title || "The Enlightened Addressbook"}
    =stylesheet_link_tag "application"
  %body
    =render partial: "layouts/flash", locals: {flash: flash}
    %div{class: "navbar navbar-inverse navbar-fixed-top"}
      %div{class: "navbar-inner"}
        %div{class: "container-fluid"}
          %ul{class: "nav"}
            %li
              %a{href: account_path, class: "brand"} My Account
            %li
              %a{href: contacts_path} Contacts
            %form{method: "post", action: search_path, class: "search-form navbar-form pull-right"}
              %input{type: "text", class: "input-medium search-query"}
              %button{type: "submit", class: "btn"} Search
          %p{class: "navbar-text pull-right"}
            Logged in as #{@current_user.username}&nbsp;&nbsp;(#{link_to "logout?", logout_path})
    %div{class: "container-fluid"}
      %div{class: "row-fluid"}
        %div{class: "span3"}
          %div{class: "well sidebar-nav"}
            %ul{class: "nav nav-list"}
              %li{class: "nav-header"}
                Contacts
              %li
                =link_to "Create a contact", new_contact_path
